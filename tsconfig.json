{
    "compileOnSave": false,
    "compilerOptions": {
        "jsx": "react",
        "lib": ["dom", "es2015", "es2016", "es2019"],
        "allowSyntheticDefaultImports": true,
        "target": "es2016",
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true
    },
    "include": ["kiebitz", "src", "src-vite"]
}
