{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Next.js in dev-mode",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "dev"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Next.js in debug-mode",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "debug"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "port": 9229
    },
    {
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "name": "Launch test files with TestCafe",
      "program": "${workspaceRoot}/node_modules/testcafe/bin/testcafe.js",
      "args": [
        "firefox",
        "${relativeFile}"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}"
    }
  ],
  "compounds": [
    {
      "name": "Debug Next.js + Chrome",
      "configurations": [
        "Launch Next.js in debug-mode",
        "Launch Chrome"
      ]
    }
  ]
}
