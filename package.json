{
    "name": "kiebitz",
    "description": "Kiebitz Web Applications",
    "version": "0.0.1",
    "private": true,
    "license": "AGPL-3.0-or-later",
    "contributors": [
        "Andreas Dewes",
        "Benjamin Bender <bb@codepoet.de>"
    ],
    "scripts": {
        "prettier": "prettier --write 'src/**/*.jsx' 'src/**/*.tsx' 'src/**/*.js'",
        "analyze": "APP_ENV=production webpack --config webpack.config.js --json | webpack-bundle-size-analyzer",
        "lint-scss": "stylelint ./src/scss/*.scss --quiet",
        "lint-scss-fix": "stylelint ./src/scss/*.scss --fix",
        "lint": "eslint . --ext js,jsx,ts,tsx --quiet && stylelint src/**/*.scss",
        "lint-fix": "eslint . --ext js,jsx,ts,tsx --quiet --fix; stylelint src/**/*.scss --fix",
        "test": "APP_ENV=test webpack-dev-server --config webpack.config.js --history-api-fallback",
        "build": "webpack --config webpack.config.js",
        "dev": "APP_ENV=dev webpack-dev-server --config webpack.config.js --history-api-fallback",
        "make-dev": "APP_ENV=dev webpack-dev-server --config webpack.config.js --history-api-fallback",
        "make": "webpack --config webpack.config.js",
        "i18n": "lingui",
        "i18n:extract": "lingui extract",
        "i18n:compile": "lingui compile"
    },
    "devDependencies": {
        "@babel/cli": "^7.16.0",
        "@babel/core": "^7.16.0",
        "@babel/eslint-parser": "^7.16.3",
        "@babel/preset-env": "^7.16.4",
        "@babel/preset-react": "7.16.0",
        "@babel/preset-typescript": "^7.16.0",
        "@headlessui/react": "^1.4.2",
        "@lingui/cli": "^3.13.0",
        "@lingui/macro": "^3.13.0",
        "@lingui/react": "^3.13.0",
        "@tailwindcss/forms": "next",
        "@types/react": "^17.0.37",
        "@typescript-eslint/eslint-plugin": "^5.5.0",
        "@typescript-eslint/parser": "^5.5.0",
        "babel-loader": "^8.2.3",
        "babel-plugin-macros": "^3.1.0",
        "buffer": "^6.0.3",
        "clsx": "^1.1.1",
        "copy-webpack-plugin": "^10.0.0",
        "css-loader": "^6.5.1",
        "eslint": "^8.1.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.27.1",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-tailwindcss": "^1.17.2",
        "json-loader": "^0.5.7",
        "mini-css-extract-plugin": "^2.4.3",
        "postcss-loader": "^6.2.1",
        "postcss-preset-env": "^7.0.1",
        "prettier": "^2.5.0",
        "process": "^0.11.10",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-error-boundary": "^3.1.4",
        "react-hook-form": "^7.20.5",
        "react-router": "^6.0.2",
        "react-router-dom": "^6.0.2",
        "react-use": "^17.3.1",
        "style-loader": "^3.3.1",
        "stylelint": "^14.1.0",
        "stylelint-a11y": "^1.2.3",
        "stylelint-config-recommended": "^6.0.0",
        "stylelint-no-unsupported-browser-features": "^5.0.2",
        "stylelint-scss": "^4.0.0",
        "tailwindcss": "next",
        "typescript": "^4.5.2",
        "webpack": "^5.64.4",
        "webpack-cli": "^4.9.1",
        "webpack-dev-server": "^4.6.0",
        "webpack-hot-middleware": "^2.25.1"
    },
    "browserslist": [
        "defaults",
        "not ie 11",
        "not op_mini all"
    ],
    "postcss": {
        "plugins": {
            "tailwindcss/nesting": {},
            "tailwindcss": {},
            "postcss-preset-env": {
                "features": {
                    "nesting-rules": false
                }
            }
        }
    },
    "eslintConfig": {
        "extends": [
            "plugin:@typescript-eslint/recommended",
            "plugin:react/recommended",
            "plugin:react-hooks/recommended",
            "plugin:jsx-a11y/recommended",
            "plugin:prettier/recommended",
            "plugin:tailwindcss/recommended"
        ],
        "plugins": [
            "@typescript-eslint"
        ],
        "root": true,
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaFeatures": {
                "jsx": true
            }
        },
        "env": {
            "browser": true,
            "es6": true
        },
        "settings": {
            "react": {
                "version": "detect"
            },
            "tailwindcss": {
                "groupByResponsive": true
            }
        },
        "ignorePatterns": [
            "node_modules",
            "build"
        ],
        "rules": {
            "no-redeclare": "off",
            "tailwindcss/no-custom-classname": "off",
            "react/prop-types": "off",
            " react/no-unescaped-entities": "off"
        }
    },
    "lingui": {
        "locales": [
            "de",
            "en"
        ],
        "sourceLocale": "de",
        "format": "po",
        "catalogs": [
            {
                "path": "src/locales/{locale}/messages",
                "include": [
                    "src"
                ]
            }
        ]
    }
}
